<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.mapper.UserMapper">
    <!--  resultType只需要告诉集合里的范型类型是什么,不需要传集合类型，因为在dao里我调的就是集合方法  -->
    <select id="queryAllUsers" resultType="com.study.domain.User">
        select * from user
    </select>

    <select id="queryOneUser" resultType="com.study.domain.User">
        select * from user where id = ${id}
    </select>

    <delete id="deleteUser">
        delete from user where id = #{id}
    </delete>

    <!--  需要传入输入参数的类型  -->
    <insert id="addUser" parameterType="com.study.domain.User">
        insert into user(name, age, sex, address, birth) values (#{name},#{age},#{sex},#{address},#{birth})
    </insert>

    <!--  修改用户,也是需要传一个对象，这个id在构造方法里传过来的   -->
    <update id="updateUser" parameterType="com.study.domain.User">
        update user set name = #{name},age = #{age},sex = #{sex},address = #{address},birth = #{birth} where id = #{id}
    </update>

</mapper>